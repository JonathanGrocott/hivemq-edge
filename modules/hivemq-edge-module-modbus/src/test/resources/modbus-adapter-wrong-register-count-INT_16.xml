<hivemq>
    <protocol-adapters>
        <modbus>
            <id>my-modbus-protocol-adapter</id>
            <port>1234</port>
            <host>my.modbus-server.com</host>
            <modbusToMqtt>
                <modbusToMqttMappings>
                    <modbusToMqttMapping>
                        <mqttTopic>my/topic</mqttTopic>
                        <addressRange>
                            <startIdx>11</startIdx>
                            <readType>HOLDING_REGISTERS</readType>
                            <unitId>0</unitId>
                        </addressRange>
                    </modbusToMqttMapping>
                </modbusToMqttMappings>
            </modbusToMqtt>
        </modbus>
    </protocol-adapters>
</hivemq>
