<hivemq>
    <protocol-adapters>
        <modbus>
            <id>my-modbus-protocol-adapter</id>
            <port>1234</port>
            <host>my.modbus-server.com</host>
            <modbusToMqtt>
            <modbusToMqttMappings>
                <modbusToMqttMapping>
                    <mqttTopic>my/topic</mqttTopic>
                    <addressRange>
                        <startIdx>10</startIdx>
                        <nrRegistersToRead>5</nrRegistersToRead>
                        <readType>HOLDING_REGISTERS</readType>
                    </addressRange>
                    <dataType>INT_32</dataType>
                </modbusToMqttMapping>
            </modbusToMqttMappings>
            </modbusToMqtt>
        </modbus>
    </protocol-adapters>
</hivemq>
