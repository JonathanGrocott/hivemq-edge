<hivemq>
    <protocol-adapters>
        <modbus>
            <id>my-modbus-protocol-adapter</id>
            <port>1234</port>
            <host>my.modbus-server.com</host>
            <subscriptions>
                <subscription>
                    <destination>my/topic</destination>
                    <addressRange>
                        <startIdx>10</startIdx>
                        <endIdx>15</endIdx>
                    </addressRange>
                    <dataType>INT_64</dataType>
                </subscription>
            </subscriptions>
        </modbus>
    </protocol-adapters>
</hivemq>
